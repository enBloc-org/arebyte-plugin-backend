{
  "kind": "collectionType",
  "collectionName": "pop_ups",
  "info": {
    "singularName": "pop-up",
    "pluralName": "pop-ups",
    "displayName": "pop up",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "work_title": {
      "type": "string",
      "required": true
    },
    "popup_size": {
      "type": "enumeration",
