        "Original (size of the image)",
        "Small ",
        "Medium ",
        "Large "
      ],
      "required": true
    },
    "popup_position": {
      "type": "enumeration",
      "enum": [
        "Top Left",
        "Top center",
        "Top right",
        "Center left",
        "Center",
        "Center right",
        "Bottom left",
        "Bottom center",
        "Bottom Right"
      ],
      "required": true
    },
    "exeternal_link": {
      "type": "string"
    },
    "artist_name": {
      "type": "string"
    },
    "creation_date": {
      "type": "string"
    },
    "medium": {
      "type": "string"
    },
    "popup_content": {
      "type": "dynamiczone",
      "components": [
        "piece.text-content",
        "piece.piece"
      ],
      "required": true,
      "max": 1
    }
  }
}
